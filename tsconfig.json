{
    "compilerOptions": {
        "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "module": "umd",
        "target": "es5",
        "declaration": true,
        "newLine": "lf",
        "outDir": "dist"
    },
    "include": ["src/**.ts"]
}
